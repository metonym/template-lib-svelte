{
  "name": "template-lib-svelte",
  "version": "0.1.3",
  "license": "MIT",
  "description": "Template for building Svelte component libraries",
  "author": "Eric Liu (https://github.com/metonym)",
  "svelte": "src/index.js",
  "main": "lib/index.js",
  "module": "lib/index.mjs",
  "scripts": {
    "build": "rollup -c",
    "test": "jest --coverage",
    "test:tdd": "jest --watch",
    "prepublishOnly": "yarn build"
  },
  "devDependencies": {
    "@babel/core": "^7.8.6",
    "@babel/preset-env": "^7.9.0",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@testing-library/jest-dom": "^5.1.1",
    "@testing-library/svelte": "^1.11.0",
    "babel-jest": "^25.1.0",
    "babel-loader": "^8.0.6",
    "eslint": "^6.8.0",
    "eslint-plugin-svelte3": "^2.7.3",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "jest-transform-svelte": "^2.1.1",
    "lint-staged": "^10.0.8",
    "prettier": "^1.19.1",
    "prettier-plugin-svelte": "^0.7.0",
    "pretty-quick": "^2.0.1",
    "regenerator-runtime": "^0.13.3",
    "rollup": "^1.32.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-svelte": "^5.1.1",
    "rollup-plugin-terser": "^5.2.0",
    "svelte": "^3.18.2",
    "svelte-loader": "^2.13.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && pretty-quick --pattern '**/*.{js,svelte}' --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,svelte}": [
      "eslint --fix"
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.svelte$": "jest-transform-svelte",
      "^.+\\.js$": "babel-jest"
    },
    "moduleFileExtensions": [
      "js",
      "svelte"
    ],
    "setupFilesAfterEnv": [
      "regenerator-runtime/runtime",
      "@testing-library/jest-dom/extend-expect"
    ]
  },
  "files": [
    "lib",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/metonym/template-lib-svelte.git"
  },
  "homepage": "https://github.com/metonym/template-lib-svelte",
  "bugs": "https://github.com/metonym/template-lib-svelte/issues",
  "keywords": [
    "svelte",
    "svelte 3",
    "component",
    "template"
  ]
}
